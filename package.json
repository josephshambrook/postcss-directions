  },
  "homepage": "https://github.com/josephshambrook/postcss-directions",
  "dependencies": {
    "postcss": "^5.2.6"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "eslint": "^6.8.0",
    "eslint-config-postcss": "^2.0.2",
    "jest": "^17.0.2",
    "postcss": "^5.2.6"
  },
